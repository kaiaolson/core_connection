<div id="home-buttons">
  <h1 class="page-headline">CoreConnection &trade;</h1>
  <div class="col-sm-6 text-center">
    <%= link_to(raw("<div class='index-students filter-students'>Available Students</div>"), root_path(available: true), remote: true) %>
  </div>
  <div class="col-sm-6 text-center">
    <%= link_to(raw("<div class='index-students filter-students'>All Students</div>"), root_path(all: true), remote: true, class: "no-underline") %>
  </div>
</div>

<div id="profiles">
 <% @profiles.each do |profile| %>
  <div class="col-xs-12 col-sm-6 col-md-3 text-center">
    <% if profile.photo %>
      <p><%= image_tag profile.photo.url %></p>
    <% end %>
    <p><%= profile.tagline %></p>
    <p><%= link_to "View Profile", profile_path(profile), class: "btn btn-primary" %></p>
  </div>
 <% end %>
</div>

<script>
  $("#profiles").hide();
</script>
